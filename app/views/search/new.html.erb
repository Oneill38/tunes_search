<h1 class="search-title">Search</h1>

<div class="row">
	
	<div class="col-sm-12">
		<%= form_for @search, :remote => true, :url => search_index_path(@search), method: :get, html: {id: "search-form"} do |search| %>
			<%= search.label :song_title %>
			<%= search.text_field :song_title, :class => "form-control" %>

			<%= search.label :album_title %>
			<%= search.text_field :album_title, :class => "form-control" %>

			<%= search.label :artist_name %>
			<%= search.text_field :artist_name, :class => "form-control" %>

			<%= button_to "Search", :action => :index ,:method => :get, remote: true %>
		<% end %>
	</div>
	
	<h3 class="results-title">Search Results</h3>

	<div class="results-area col-sm-12">

	</div>
	
</div>

